<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Popup menu background color. -->
    <style name="PopupMenuStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- CardView Style. -->
    <style name="cardViewStyle">
        <item name="android:layout_width">@dimen/card_width</item>
        <item name="android:layout_height">@dimen/card_height</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="android:padding">@dimen/card_padding</item>
        <item name="android:background">@color/cardViewBackground</item>
    </style>

</resources>